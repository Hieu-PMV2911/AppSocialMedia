<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="3dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileivTv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_default_img_foreground" />


        <ImageView
            android:id="@+id/onlineStatusTv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_offline"
            android:layout_alignStart="@+id/profileivTv"
            android:layout_marginStart="48dp"
            android:layout_marginTop="48dp"
            android:layout_toEndOf="@id/profileivTv" />

        <TextView
            android:id="@+id/nameTv"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/profileivTv"
            android:layout_toRightOf="@id/profileivTv"
            android:text="His name"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lastMessageTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The last message"
            android:maxLines="2"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/profileivTv"
            android:layout_below="@id/nameTv"
            android:layout_toRightOf="@id/profileivTv"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>